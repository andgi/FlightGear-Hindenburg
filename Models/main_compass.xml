<PropertyList>

 <!-- Rudder coxswain's magnetic compass. -->
 <model>
  <name>Compass scale</name>
  <!-- path>Aircraft/Instruments-3d/comp/comp.xml</path -->
  <path>Aircraft/Instruments-3d/mag-compass.xml</path>
  <offsets>
   <x-m>  0.0 </x-m>
   <y-m>  0.0 </y-m>
   <z-m>  0.0 </z-m>
  </offsets>
 </model>

 <animation>
  <type>scale</type>
  <object-name>Compass scale</object-name>
  <property>/constants/zero</property>
  <x-factor>0.0</x-factor>
  <x-offset>4.0</x-offset>
  <y-factor>0.0</y-factor>
  <y-offset>4.0</y-offset>
  <z-factor>0.0</z-factor>
  <z-offset>4.0</z-offset>
  <center>
   <x-m>  0.0 </x-m>
   <y-m>  0.0 </y-m>
   <z-m>  0.0 </z-m>
  </center>
 </animation>

</PropertyList>
