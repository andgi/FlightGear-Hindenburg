<PropertyList>

 <path>pilot-b.ac</path>
 <offsets>
  <!-- x/y/z == back/right/up -->
  <x-m> 0.0 </x-m>
  <y-m> 0.0 </y-m>
  <z-m> 0.0 </z-m>
 </offsets>

 <!-- arms -->
 <animation>
  <type>rotate</type>
  <object-name>arm1.R</object-name>
  <object-name>arm2.R</object-name>
  <object-name>hand.R</object-name>
  <property>constants/zero</property>
  <offset-deg>85</offset-deg>
  <center>
   <x-m>0.08</x-m>
   <y-m>0.22</y-m>
   <z-m>0.45</z-m>
  </center>
  <axis>
   <x>-1.0</x>
   <y>0.2</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>arm2.R</object-name>
  <object-name>hand.R</object-name>
  <property>constants/zero</property>
  <factor>0</factor>
  <center>
   <x-m>0.007</x-m>
   <y-m>0.533</y-m>
   <z-m>0.455</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>-0.5</y>
   <z>1.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>arm1.L</object-name>
  <object-name>arm2.L</object-name>
  <object-name>hand.L</object-name>
  <property>constants/zero</property>
  <offset-deg>85</offset-deg>
  <center>
   <x-m>0.08</x-m>
   <y-m>-0.22</y-m>
   <z-m>0.45</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.2</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>arm2.L</object-name>
  <object-name>hand.L</object-name>
  <property>constants/zero</property>
  <factor>0</factor>
  <center>
   <x-m>0.007</x-m>
   <y-m>-0.533</y-m>
   <z-m>0.455</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>-0.5</y>
   <z>-1.0</z>
  </axis>
 </animation>

</PropertyList>
