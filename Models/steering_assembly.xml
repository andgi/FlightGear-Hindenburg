<PropertyList>

 <!-- Steering wheel with base assembly. -->
 <model>
  <name>Steering wheel</name>
  <path>Aircraft/LZ-129/Models/LZ-129_control_wheel.ac</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>  0.0 </x-m>
   <y-m>  0.0 </y-m>
   <z-m>  0.0 </z-m>
  </offsets>
 </model>
 <model>
  <name>Steering wheel base</name>
  <path>Aircraft/LZ-129/Models/LZ-129_control_base.ac</path>
  <offsets>
   <x-m>  0.0 </x-m>
   <y-m>  0.0 </y-m>
   <z-m>  0.0 </z-m>
  </offsets>
 </model>

 <!-- Rudder coxswain's magnetic compass. -->
 <model>
  <name>Magnetic compass</name>
  <path>Aircraft/LZ-129/Models/main_compass.xml</path>
  <offsets>
   <x-m> -0.4 </x-m>
   <y-m>  0.0 </y-m>
   <z-m>  0.2 </z-m>
   <pitch-deg> -25 </pitch-deg>
  </offsets>
 </model>


 <animation>
  <type>rotate</type>
  <object-name>Steering wheel</object-name>
  <property>surface-positions/rudder-pos-norm</property>
  <factor>-250.0</factor>
  <center>
   <x-m> 0.0 </x-m>
   <y-m> 0.0 </y-m>
   <z-m> 0.0 </z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
