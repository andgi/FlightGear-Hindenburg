  <object-name>PropDisc4</object-name>
  <object-name>PropBlur4</object-name>
 </animation>

 <!-- PROPELLERS. -->
 <!--   Assumes 1/7 gear ratio -->

 <!-- 1. -->
 <animation>
  <type>spin</type>
  <object-name>Propeller1</object-name>
  <property>engines/engine[0]/rpm</property>
  <factor>0.5625</factor>
  <center>
   <x-m> 0.0 </x-m>
   <y-m> 0.0 </y-m>
   <z-m> 0.0 </z-m>
  </center>
  <axis>
   <x> 1.0 </x>
   <y> 0.0 </y>
   <z> 0.0 </z>
  </axis>
 </animation>
 <animation>
  <type>select</type>
  <object-name>PropDisc1</object-name>
  <condition>
   <greater-than>
    <property>engines/engine[0]/rpm</property>
    <value>1000</value>
   </greater-than>
  </condition>
 </animation>
 <animation>
  <type>select</type>
  <object-name>PropBlur1</object-name>
  <condition>
   <and>
    <greater-than>
     <property>engines/engine[0]/rpm</property>
     <value>400.000</value>
    </greater-than>
    <less-than>
     <property>engines/engine[0]/rpm</property>
     <value>1000.001</value>
    </less-than>
   </and>
  </condition>
 </animation>

