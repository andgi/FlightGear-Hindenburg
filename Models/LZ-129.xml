<PropertyList>

 <!-- The hull. -->
 <path>LZ-129_hull.ac</path>
 <offsets>
  <x-m> -100.0 </x-m>
  <y-m> 0.0 </y-m>
  <z-m> 0.0 </z-m>
 </offsets>

 <!-- The control car -->
 <model>
  <name>Control car</name>
  <path>Aircraft/LZ-129/Models/LZ-129_car_no_moving_parts.ac</path>
  <offsets>
   <x-m> 0.0 </x-m>
   <y-m> 0.0 </y-m>
   <z-m> 0.0 </z-m>
  </offsets>
 </model>

 <!-- The steering wheel -->
 <model>
  <name>Steering wheel</name>
  <path>Aircraft/LZ-129/Models/LZ-129_control_wheel.ac</path>
  <offsets>
   <x-m> 38.2 </x-m>
   <y-m>  0.0 </y-m>
   <z-m> -19.50 </z-m>
  </offsets>
 </model>

 <!-- The elevator wheel -->
 <model>
  <name>Elevator wheel</name>
  <path>Aircraft/LZ-129/Models/LZ-129_control_wheel.ac</path>
  <offsets>
   <heading-deg>90</heading-deg>
   <x-m> 40.10 </x-m>
   <y-m> -1.1 </y-m>
   <z-m> -19.50 </z-m>
  </offsets>
 </model>

 <!-- The engine cars -->
 <model>
  <name>Engine cars</name>
  <path>Aircraft/LZ-129/Models/LZ-129_engines.ac</path>
  <offsets>
   <x-m> 0.0 </x-m>
   <y-m> 0.0 </y-m>
   <z-m> 0.0 </z-m>
  </offsets>
 </model>

 <!-- The elevators -->
 <model>
  <name>Elevators</name>
  <path>Aircraft/LZ-129/Models/LZ-129_elevators.ac</path>
  <offsets>
   <x-m> 227.270 </x-m>
   <y-m> 0.0 </y-m>
   <z-m> 0.0 </z-m>
  </offsets>
 </model>

 <!-- The rudders -->
 <model>
  <name>Rudders</name>
  <path>Aircraft/LZ-129/Models/LZ-129_rudders.ac</path>
  <offsets>
   <x-m> 227.270 </x-m>
   <y-m> 0.0 </y-m>
   <z-m> 0.0 </z-m>
  </offsets>
 </model>

 <!-- The propellers. Temporary models and animations borrowed from the
      Boeing 314.
      The propeller origin is set 20 cm behind the propeller's true center. 
 -->
 <model>
  <name>Propeller1</name>
  <path>Aircraft/LZ-129/Models/propeller2.ac</path>
  <offsets>
   <heading-deg>180</heading-deg>
   <x-m> 155.720 </x-m>
   <y-m> -15.390 </y-m>
   <z-m> -17.820 </z-m>
  </offsets>
 </model>

 <model>
  <name>Propeller2</name>
  <path>Aircraft/LZ-129/Models/propeller2.ac</path>
  <offsets>
   <heading-deg>180</heading-deg>
   <x-m> 155.720 </x-m>
   <y-m>  15.390 </y-m>
   <z-m> -17.820 </z-m>
  </offsets>
 </model>

 <model>
  <name>Propeller3</name>
  <path>Aircraft/LZ-129/Models/propeller2.ac</path>
  <offsets>
   <heading-deg>180</heading-deg>
   <x-m> 107.525 </x-m>
   <y-m> -20.250 </y-m>
   <z-m> -14.310 </z-m>
  </offsets>
 </model>

 <model>
  <name>Propeller4</name>
  <path>Aircraft/LZ-129/Models/propeller4.ac</path>
  <offsets>
   <heading-deg>180.0</heading-deg>
   <x-m> 107.525 </x-m>
   <y-m>  20.250 </y-m>
   <z-m> -14.310 </z-m>
  </offsets>
 </model>

 <!-- ======================================= -->
 <!-- panel models (X/Y/Z depth/width/height) -->
 <!-- ======================================= -->
 
 <panel>
   <!-- Temporary panel. -->
   <path>Aircraft/Boeing314/Panels/Boeing314A-pilot.xml</path>
   <name>RudderCoxswainPanel</name>
   <bottom-left>
    <x-m> 38.11 </x-m>
    <y-m> -0.850 </y-m>
    <z-m> -20.3275 </z-m>
   </bottom-left>
   <bottom-right>
    <x-m> 38.11 </x-m>
    <y-m> 0.895 </y-m>
    <z-m> -20.3275 </z-m>
   </bottom-right>
   <top-left>
    <x-m> 37.81 </x-m>
    <y-m> -0.850 </y-m>
    <z-m> -19.455 </z-m>
   </top-left>
 </panel>

 <panel>
   <!-- Temporary panel. -->
   <path>Aircraft/Boeing314/Panels/Boeing314A-radio.xml</path>
   <name>NavigatorPanel</name>
   <bottom-left>
    <x-m> 41.10 </x-m>
    <y-m> -0.75 </y-m>
    <z-m> -19.63 </z-m>
   </bottom-left>
   <bottom-right>
    <x-m> 41.10 </x-m>
    <y-m> -0.050 </y-m>
    <z-m> -19.63 </z-m>
   </bottom-right>
   <top-left>
    <x-m>  41.10 </x-m>
    <y-m> -0.75 </y-m>
    <z-m> -19.28 </z-m>
   </top-left>
 </panel>

 <!-- Animations ======================================================== -->
 
 <!-- LOD for the model as a whole -->
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>10000</max-m>
 </animation>

<!-- PROPELLERS. NOTE: Temporary animations borrowed from the
      Boeing 314. -->

<!-- assume 1/7 gear ratio -->

 <!-- 1. -->
 <animation>
  <type>spin</type>
  <object-name>Propeller1</object-name>
  <property>engines/engine[0]/rpm</property>
  <factor>0.5625</factor>
  <center>
   <x-m> 155.520 </x-m>
   <y-m> -15.390 </y-m>
   <z-m> -17.820 </z-m>
  </center>
  <axis>
   <x> 1.0 </x>
   <y> 0.0</y>
   <z> 0.0 </z>
  </axis>
 </animation>

 <!-- 2. -->
 <animation>
  <type>spin</type>
  <object-name>Propeller2</object-name>
  <property>engines/engine[1]/rpm</property>
  <factor>-0.5625</factor>
  <center>
   <x-m> 155.520 </x-m>
   <y-m>  15.390 </y-m>
   <z-m> -17.820 </z-m>
  </center>
  <axis>
   <x> 1.0 </x>
   <y> 0.0 </y>
   <z> 0.0 </z>
  </axis>
 </animation>

 <!-- 3. -->
 <animation>
  <type>spin</type>
  <object-name>Propeller3</object-name>
  <property>engines/engine[2]/rpm</property>
  <factor>0.5625</factor>
  <center>
   <x-m> 107.325 </x-m>
   <y-m> -20.250 </y-m>
   <z-m> -14.310 </z-m>
  </center>
  <axis>
   <x> 1.0 </x>
   <y> 0.0 </y>
   <z> 0.0 </z>
  </axis>
 </animation>

 <!-- 4. -->
 <animation>
  <type>spin</type>
  <object-name>Propeller4</object-name>
  <property>engines/engine[3]/rpm</property>
  <factor>-0.5625</factor>
  <center>
   <x-m> 0.0 </x-m>
   <y-m> 0.0 </y-m>
   <z-m> 0.0 </z-m>
  </center>
  <axis>
   <x> 1.0 </x>
   <y> 0.0 </y>
   <z> 0.0 </z>
  </axis>
 </animation>

 <!-- Controls -->

 <animation>
  <type>rotate</type>
  <object-name>Steering wheel</object-name>
  <property>surface-positions/rudder-pos-norm</property>
  <factor>-250.0</factor>
  <center>
   <x-m> 38.2 </x-m>
   <y-m>  0.0 </y-m>
   <z-m> -19.50 </z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Elevator wheel</object-name>
  <property>surface-positions/elevator-pos-norm</property>
  <factor>-250.0</factor>
  <center>
   <x-m> 40.10 </x-m>
   <y-m> -1.1 </y-m>
   <z-m> -19.50 </z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <!-- Control surfaces -->

 <animation>
  <type>rotate</type>
  <object-name>Elevators</object-name>
  <property>surface-positions/elevator-pos-norm</property>
  <interpolation>
   <entry>
    <ind>-1.0</ind>
    <dep>-30</dep>
   </entry>
   <entry>
    <ind>0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>30</dep>
   </entry>
  </interpolation>
  <center>
   <x-m>227.270</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Rudders</object-name>
  <property>surface-positions/rudder-pos-norm</property>
  <interpolation>
   <entry>
    <ind>-1.0</ind>
    <dep>-30</dep>
   </entry>
   <entry>
    <ind>0</ind>
    <dep>0</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>30</dep>
   </entry>
  </interpolation>
  <center>
   <x-m>227.270</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
 </animation>

 <!-- LODs -->

 <!-- Hide panels in outside views. -->

 <animation>
  <type>range</type>
  <object-name>RudderCoxswainPanel</object-name>
  <min-m>0</min-m>
  <max-m>45</max-m>
 </animation>
 <animation>
  <type>range</type>
  <object-name>NavigatorPanel</object-name>
  <min-m>0</min-m>
  <max-m>48</max-m>
 </animation>

</PropertyList>
