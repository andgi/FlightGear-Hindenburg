<PropertyList>

 <sim>

  <description>LZ-129 Hindenburg</description>
  <author>Anders Gidenstam</author>
  <status>experimental</status>
  <aircraft-version>0.1</aircraft-version>

  <model>
   <path>Aircraft/LZ-129/Models/LZ-129.xml</path>
  </model>
  
  <view n="0">
   <internal archive="y">true</internal>
   <config>
    <!-- x/y/z == right/up/back -->
    <!-- rudder coxswain's position -->
    <x-offset-m archive="y"> 0.0 </x-offset-m>
    <y-offset-m archive="y"> -18.9 </y-offset-m>
    <z-offset-m archive="y"> -61.0 </z-offset-m>
    <pitch-offset-deg>-3</pitch-offset-deg>
    <default-field-of-view-deg>65</default-field-of-view-deg>
    <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
   </config>
  </view>

  <!-- Define extra views. -->
  <number-views type="int">9</number-views>

  <view n="8">
   <name>Elevator Coxswain View</name>
   <type>lookfrom</type>
   <internal type="bool">true</internal>
   <config>
    <from-model type="bool">true</from-model>
    <from-model-idx type="int">0</from-model-idx>
    <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
    <default-field-of-view-deg type="double">65.0</default-field-of-view-deg>
    <default-pitch-deg type="double">0</default-pitch-deg>
    <default-heading-deg type="double">0</default-heading-deg>
    <front-direction-deg type="double">0</front-direction-deg>
    <front-left-direction-deg type="double">45</front-left-direction-deg>
    <left-direction-deg type="double">90</left-direction-deg>
    <back-left-direction-deg type="double">135</back-left-direction-deg>
    <back-direction-deg type="double">180</back-direction-deg>
    <back-right-direction-deg type="double">225</back-right-direction-deg>
    <right-direction-deg type="double">270</right-direction-deg>
    <front-right-direction-deg type="double">315</front-right-direction-deg>
    <!-- x/y/z == right/up/back -->
    <x-offset-m archive="y"> -0.7 </x-offset-m>
    <y-offset-m archive="y"> -18.9 </y-offset-m>
    <z-offset-m archive="y"> -59.9 </z-offset-m>
    <pitch-offset-deg>-5</pitch-offset-deg>
    <heading-offset-deg type="double">90</heading-offset-deg>
   </config>
  </view>

  <view n="7">
   <name>Engine Car 3 View</name>
   <type>lookfrom</type>
   <internal type="bool">true</internal>
   <config>
    <from-model type="bool">true</from-model>
    <from-model-idx type="int">0</from-model-idx>
    <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
    <default-field-of-view-deg type="double">65.0</default-field-of-view-deg>
    <default-pitch-deg type="double">0</default-pitch-deg>
    <default-heading-deg type="double">0</default-heading-deg>
    <front-direction-deg type="double">0</front-direction-deg>
    <front-left-direction-deg type="double">45</front-left-direction-deg>
    <left-direction-deg type="double">90</left-direction-deg>
    <back-left-direction-deg type="double">135</back-left-direction-deg>
    <back-direction-deg type="double">180</back-direction-deg>
    <back-right-direction-deg type="double">225</back-right-direction-deg>
    <right-direction-deg type="double">270</right-direction-deg>
    <front-right-direction-deg type="double">315</front-right-direction-deg>
    <!-- x/y/z == right/up/back -->
    <x-offset-m archive="y"> -20.25 </x-offset-m>
    <y-offset-m archive="y"> -12.97 </y-offset-m>
    <z-offset-m archive="y"> 6.0 </z-offset-m>
    <pitch-offset-deg>-5</pitch-offset-deg>
    <heading-offset-deg type="double">180</heading-offset-deg>
   </config>
  </view>

  <view n="6">
   <name>Engine Car 2 View</name>
   <type>lookfrom</type>
   <internal type="bool">true</internal>
   <config>
    <from-model type="bool">true</from-model>
    <from-model-idx type="int">0</from-model-idx>
    <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
    <default-field-of-view-deg type="double">65.0</default-field-of-view-deg>
    <default-pitch-deg type="double">0</default-pitch-deg>
    <default-heading-deg type="double">0</default-heading-deg>
    <front-direction-deg type="double">0</front-direction-deg>
    <front-left-direction-deg type="double">45</front-left-direction-deg>
    <left-direction-deg type="double">90</left-direction-deg>
    <back-left-direction-deg type="double">135</back-left-direction-deg>
    <back-direction-deg type="double">180</back-direction-deg>
    <back-right-direction-deg type="double">225</back-right-direction-deg>
    <right-direction-deg type="double">270</right-direction-deg>
    <front-right-direction-deg type="double">315</front-right-direction-deg>
    <!-- x/y/z == right/up/back -->
    <x-offset-m archive="y"> 15.255 </x-offset-m>
    <y-offset-m archive="y"> -16.52 </y-offset-m>
    <z-offset-m archive="y"> 53.25 </z-offset-m>
    <pitch-offset-deg>-5</pitch-offset-deg>
    <heading-offset-deg type="double">180</heading-offset-deg>
   </config>
  </view>

  <chase-distance-m type="double" archive="y">-300.0</chase-distance-m>

<!--
  <sound>
   <audible>false</audible>
   <path>Aircraft/LZ-129/Sounds/LZ-129-sound.xml</path>
  </sound>
-->

  <!-- Aircraft specific help. -->
  <help include="help.xml"/>

 </sim>

