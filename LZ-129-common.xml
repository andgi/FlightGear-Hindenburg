  <view n="0">
   <internal type="bool">true</internal>
   <config>
    <!-- x/y/z == right/up/back -->
    <!-- commander's position -->
    <x-offset-m archive="y">   0.40 </x-offset-m>
    <y-offset-m archive="y"> -18.80 </y-offset-m>
    <z-offset-m archive="y"> -60.40 </z-offset-m>
    <pitch-offset-deg>-3</pitch-offset-deg>
    <default-field-of-view-deg>65</default-field-of-view-deg>
   </config>
  </view>

  <!-- Define extra views. -->
  <view n="105">
   <name>Rudder Coxswain View</name>
   <internal type="bool">true</internal>
   <config>
